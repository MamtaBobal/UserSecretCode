<p id="notice"><%= notice %></p>

<h1>Secret Codes</h1>

<div>
  <form action="/secret_codes/generate_n_secret_codes", method="get">
    <%= select_tag :count, options_for_select([1, 10, 20, 50, 100], 10), :id => "secret_codes_count" %>
    <button type="submit" class="btn btn-primary">Generate</button>
  </form>
</div>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>User Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @secret_codes.each do |secret_code| %>
      <tr>
        <td><%= secret_code.code %></td>
        <td><%= secret_code.user&.email %></td>
        <td><%= link_to 'Show', secret_code %></td>
        <td><%= link_to 'Edit', edit_secret_code_path(secret_code) %></td>
        <td><%= link_to 'Destroy', secret_code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Secret Code', new_secret_code_path %>

